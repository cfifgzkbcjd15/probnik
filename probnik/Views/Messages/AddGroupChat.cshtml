                <input type="checkbox" name="groupModels[@i].userId" value="@users[i].Id" class="form-control" />
                <input hidden name="groupModels[@i].Creator" value="@only" class="form-control" />
                <input hidden name="groupModels[@i].GroupId" value="@(groupId+1)" class="form-control" />
            </div>
        </div>
    }

    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
