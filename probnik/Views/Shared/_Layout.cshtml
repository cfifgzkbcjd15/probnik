@using System.Security.Claims;
@{
    var idd = User.FindFirstValue(ClaimTypes.NameIdentifier);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="icon" href="https://sun9-77.userapi.com/impg/c857324/v857324279/1bc14c/_A2KCrKSmDA.jpg?size=604x587&quality=96&sign=d8cb68d743882097e8690e26c8da85fb&type=album" />
    <script src="https://kit.fontawesome.com/9a4928363c.js" crossorigin="anonymous"></script>
</head>
<style>
    a {
        color: rgb(108 108 255);
    }

    input[type='file'] {
        color: transparent;
    }

    .container a {
        text-decoration: none;
    }

    label {
        color: rgb(108 108 255);
    }

    h2 {
        color: rgb(108 108 255);
    }

    p {
        color: rgb(108 108 255);
    }

    .header__logo {
        flex: 0 0 60px;
        border-radius: 50%;
        overflow: hidden;
    }
    .rightbokmenu {
        position: fixed;
        height: 70px;
        width: 10%;
        background-color: rgba(128, 128, 255,0.3);
        right: 15%;
        top: 73px;
        border-radius: 10px;
        font-size:13px;
    }

    .header__logo img {
        max-width: 100%;
        display: block;
    }

    .bokmenu {
        height: 200px;
        width: 130px;
        position: absolute;
        display: flex;
        max-width: 25%;
        min-width: 10px;
        left: 13%;
        /*top: 11%;*/
        background-color: rgba(128, 128, 255,0.3);
        border-radius: 10px;
        max-height: 160px;
    }

    body {
        font-size: 15px;
    }

    .container {
        width: 41%;
    }

    input[type=submit] {
        border-radius: 10px;
        border-color: rgba(128, 128, 255,0.3);
        background: rgba(128 128 255 / 15%);
        justify-content: center;
        display: flex;
        flex-flow: row wrap;
    }

    @@media (max-width:1040px) {

        .bokmenu {
            width: 14%;
            font-size: 10px;
        }
    }

    @@media (max-width:900px) {
        .rightbokmenu {
            font-size:8px;
        }
    }

    @@media (max-width:600px) {
        .bokmenu {
            font-size: 8px;
        }
        .rightbokmenu{
        height:60px;
        }
        input[type=submit] {
            width: 40px;
            height: 20px;
            font-size: 7px;
        }

        .container {
            font-size: 8px;
        }
    }

    @@media (max-width:490px) {
        .container {
            width: 51%;
        }
        .rightbokmenu {
            right:10%;
            width:13%;
            height:50px;
            font-size:6px;
        }
            .bokmenu {
            left: 15px;
            width: 18%;
        }

        h2 {
            font-size: 15px;
        }

        input[type=submit] {
            width: 30px;
            height: 15px;
            font-size: 5px;
        }
    }
    @@media (max-width:420px) {
        .rightbokmenu {
            width:15%;
            right:8%;
        }
    }
</style>
<body style=" background: white;">
    <header>
        <nav style="border-bottom: 1px solid #b8cadc00 !important;background-color: rgba(128, 128, 255,0.3); width: 100%; " class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom  mb-3">
            <div class="container" style="width:100%;">
                <a class="navbar-brand" style="color: rgb(108 108 255);" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>

                @if (User.Identity.IsAuthenticated)
                {
                    <div style="position: absolute;right: 2%;">

                        <form method="post" asp-controller="Account" asp-action="Logout">
                            <span>
                                <div style="display: inline-block;">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="UserId" asp-route-id="@idd">
                                        Моя страница
                                    </a>
                                </div>
                            </span>
                            <span>
                                <div style="display: inline-block;">
                                    <label class="upload-file__label" for="upload-file__input_output">
                                        <i class="fas fa-sign-out-alt"></i>
                                    </label>
                                    <input hidden id="upload-file__input_output" type="submit" value="Выход" />
                                </div>
                            </span>

                        </form>
                    </div>

                }
                else
                {
                    <div style="top: 28%;position: absolute;right: 2%;">
                        <a asp-controller="Account" asp-action="Login">Вход</a>
                        <a asp-controller="Account" asp-action="Register">Регистрация</a>
                    </div>
                }
            </div>
        </nav>
    </header>
    @if (User.Identity.IsAuthenticated)
    {

        <div class="bokmenu" align="left">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">

                    <a class="nav-link" style="margin-left:5px;" asp-area="" asp-controller="Home" asp-action="Friends"><i class="fas fa-user-friends"></i> Друзья</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="margin-left:5px;" asp-area="" asp-controller="Messages" asp-action="Index"><i class="far fa-envelope"></i> Сообщения</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="margin-left:5px;" asp-area="" asp-controller="Albums" asp-action="Index"><i class="far fa-images"></i> Галерея</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="margin-left:5px;" asp-area="" asp-controller="Home" asp-action="GetUsers"><i class="fas fa-users"></i> Пользователи</a>
                </li>


            </ul>
        </div>
    }

    <div class="container" style=" border-radius: 10px; height: 100%; min-height: 525px; background-color: rgba(128, 128, 255,0.3); ">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>