@using System.Security.Claims;
@model probnik.Data.Albums
@{
    ViewBag.Title = "Добавление пользователя";
    var idd = User.FindFirstValue(ClaimTypes.NameIdentifier);
}
<form asp-action="CreateAlbums" asp-controller="Albums">
    <div hidden class="form-group">
        <label asp-for="UserId" class="control-label">userid</label>
        <input type="text" asp-for="UserId" value="@idd" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Title" class="control-label">Название</label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>